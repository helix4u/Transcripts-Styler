{
  "manifest_version": 3,
  "name": "Transcript Styler",
  "version": "0.4.1",
  "description": "Extract, restyle, and enhance transcripts with AI. Supports multiple LLM providers and TTS options.",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Transcript Styler"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
